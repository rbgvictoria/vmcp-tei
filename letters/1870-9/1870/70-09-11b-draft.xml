                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; "
                        xml:lang="en">C.S. 314 all to<space unit="chars" quantity="1"/>
                        <seg rend="DefaultParagraphFont" style="">
                           <hi rend="underline">incidentals</hi>
                        </seg>
                     </p>
                  </cell>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">£10</p>
                  </cell>
               </row>
               <row>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; "
                        xml:lang="en">Not yet under authority all to be transferred to<space unit="chars" quantity="1"/>
                        <seg rend="DefaultParagraphFont" style="">
                           <hi rend="underline">incidentals</hi>
                        </seg>
                     </p>
                  </cell>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">£20</p>
                  </cell>
               </row>
               <row>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">Total</p>
                  </cell>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">£40</p>
                  </cell>
               </row>
            </table>
            <p rend="letter"
               style="font-size: 12pt; hyphenate: false; "
               xml:lang="en">Forage</p>
            <space dim="vertical" unit="lines" quantity="1"/>
            <table n="">
               <row>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; "
                        xml:lang="en">Auth. C.S. 204<space unit="chars" quantity="1"/>
                     </p>
                  </cell>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">£70</p>
                  </cell>
               </row>
               <row>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; "
                        xml:lang="en">To be transferred to<space unit="chars" quantity="1"/>
                        <seg rend="DefaultParagraphFont" style="">
                           <hi rend="underline">wages</hi>
                        </seg>
                     </p>
                  </cell>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">£25</p>
                  </cell>
               </row>
               <row>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; "
                        xml:lang="en">Not yet under authority, also to be transferred to<space unit="chars" quantity="1"/>
                        <seg rend="DefaultParagraphFont" style="">
                           <hi rend="underline">wages</hi>
                        </seg>
                     </p>
                  </cell>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">£15</p>
                  </cell>
               </row>
               <row>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">Total</p>
                  </cell>
                  <cell style="border: none; padding-top: 0in; padding-left: 0.0555in; padding-bottom: 0in; padding-right: 0.0555in; ">
                     <p rend="letter"
                        style="font-size: 12pt; hyphenate: false; text-align: end; "
                        xml:lang="en">£40</p>
                  </cell>
               </row>
            </table>
            <p rend="valediction"
               style="font-size: 12pt; margin-left: 1.75in; hyphenate: false; "
               xml:lang="en">I have the honor to be,</p>
            <p rend="valediction"
               style="font-size: 12pt; margin-left: 1.75in; hyphenate: false; "
               xml:lang="en">
               <space dim="horizontal" extent="tab"/>Sir,</p>
            <p rend="valediction"
               style="font-size: 12pt; margin-left: 1.75in; hyphenate: false; "
               xml:lang="en">
               <space dim="horizontal" extent="tab"/>
               <space dim="horizontal" extent="tab"/>your obedient servant</p>
            <p rend="valediction"
               style="font-size: 12pt; margin-left: 1.75in; hyphenate: false; "
               xml:lang="en">
               <space dim="horizontal" extent="tab"/>
               <space dim="horizontal" extent="tab"/>
               <space dim="horizontal" extent="tab"/>Ferd. von Mueller,</p>
            <p rend="valediction"
               style="font-size: 12pt; margin-left: 1.75in; hyphenate: false; "
               xml:lang="en">
               <space dim="horizontal" extent="tab"/>
               <space dim="horizontal" extent="tab"/>
               <space dim="horizontal" extent="tab"/>
               <space dim="horizontal" extent="tab"/>Direct. botan. Garden</p>
            <space dim="vertical" unit="lines" quantity="1"/>
            <p rend="letter"
               style="font-size: 12pt; hyphenate: false; "
               xml:lang="en">The honorable the Chief Secretary</p>
         </div>
